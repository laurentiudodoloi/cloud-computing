    </div>
    <script>
         var place =document.getElementById('tme');
         var longp =document.getElementById('longpid');
         var latp =document.getElementById('latpid');

    
        var lo =      localStorage.getItem("longitude");
       var  la = localStorage.getItem("latitude");
       longp.innerText = lo;
       latp.innerText = la;
       var r;
     let request = new XMLHttpRequest();
     request.open("GET","https://custom-functions4hwcc.azurewebsites.net/api/TellTheTime?code=MAtDtPaTnTJ64gncCNxRzjJGEcvgjdfob9ri3ahTReIG5MF7RGMQTw==");
     request.send();
     request.onload = ()=>{
        if (request.status===200)
        {
            console.log(request.response);
          place.value = request.response;
           place.innerText = request.response;
        }
        else {
            console.log(`error ${request.status} with ${request.statusText}`);
            alert(`error ${request.status} with ${request.statusText}`);
        }
     }
   
              
   


    </script>
